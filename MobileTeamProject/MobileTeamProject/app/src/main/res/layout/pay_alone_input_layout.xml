                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="#ffffff"
                  android:inputType="text"
                  android:hint="                                 "/>
          </LinearLayout>
          <LinearLayout
              android:id="@+id/pay_alone_input_layout6"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_weight="1"
              android:visibility="gone">
              <TextView
                  android:textColor="#ffffff"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:text=" 6번"/>
              <EditText
                  android:textCursorDrawable="@null"
                  android:id="@+id/pay_alone_input_name_edit6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="20sp"
                  android:textColor="#ffffff"
                  android:inputType="text"
                  android:hint="                                 "/>
          </LinearLayout>
      </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <LinearLayout
               android:id="@+id/pay_alone_input_layout7"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:visibility="gone">
               <TextView
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:text=" 7번"/>
               <EditText
                   android:textCursorDrawable="@null"
                   android:id="@+id/pay_alone_input_name_edit7"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:inputType="text"
                   android:hint="                                 "/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/pay_alone_input_layout8"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:visibility="gone">
               <TextView
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
