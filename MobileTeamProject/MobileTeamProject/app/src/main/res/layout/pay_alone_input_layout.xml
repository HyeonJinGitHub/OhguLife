                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:inputType="text"
                   android:hint="                                 "/>
           </LinearLayout>

       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <LinearLayout
               android:id="@+id/pay_alone_input_layout9"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:visibility="gone">
               <TextView
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:text=" 9번"/>
               <EditText
                   android:textCursorDrawable="@null"
                   android:id="@+id/pay_alone_input_name_edit9"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:inputType="text"
                   android:hint="                                 "/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/pay_alone_input_layout10"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_weight="1"
               android:visibility="gone">
               <TextView
                   android:textColor="#ffffff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:text=" 10번"/>
               <EditText
                   android:textCursorDrawable="@null"
                   android:id="@+id/pay_alone_input_name_edit10"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="20sp"
                   android:textColor="#ffffff"
                   android:inputType="text"
                   android:hint="                                 "/>
           </LinearLayout>

       </LinearLayout>

    </LinearLayout>

    <TextView
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pay_alone_input_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="#C6AB72"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="뒤로"/>

        <Button
            android:id="@+id/pay_alone_input_next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="#964B00"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="시작"/>
    </LinearLayout>

</LinearLayout>